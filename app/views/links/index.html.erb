<center>
<h1>Go to you short link by typing
<br> http://minifyurl.herokuapp.com/links/(Your shortlink)</h1>
</center>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Url</th>
      <th>Copy this shortlink</th>
      <th>
        <i class="icon-trash"></i>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link_to link.id, link_path(link) %> </td>
        <td><%= link.url %></td>
        <td><%= link_to link.shorturl,link_path(link) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<center>
<div class="form-actions">
  <%= link_to 'New Link', new_link_path , :class => 'btn' %>
</div>
</center>
