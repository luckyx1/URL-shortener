<h1>Listing Your shorten links</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Url</th>
      <th>Shorturl</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link_to link.id, link_path(link) %> </td>
        <td><%= link.url %></td>
        <td><%= link.shorturl %></td>
        <td><%= link_to 'Show', link %></td>
        <td><%= link_to 'Edit', edit_link_path(link) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<center>
<div class="form-actions">
  <%= link_to 'New Link', new_link_path , :class => 'btn' %>
</div>
</center>
